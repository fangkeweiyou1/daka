<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <FrameLayout
            android:id="@+id/fl_danci_cavas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"></FrameLayout>
    </FrameLayout>

    <ScrollView
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/divider"
            android:orientation="vertical"
            android:showDividers="middle|end|beginning|none">

            <TextView
                android:id="@+id/tv_danci_daojishi"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="?selectableItemBackground"
                android:gravity="center_vertical"
                android:onClick="onClick"
                android:text="倒计时"
                android:textColor="@color/common_text_black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_danci_daka"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="?selectableItemBackground"
                android:gravity="center_vertical"
                android:onClick="onClick"
                android:text="打卡"
                android:textColor="@color/common_text_black"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/tv_danci_music"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="?selectableItemBackground"
                android:gravity="center_vertical"
                android:onClick="onClick"
                android:text="听歌"
                android:textColor="@color/common_text_black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_danci_adddanci"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="?selectableItemBackground"
                android:gravity="center_vertical"
                android:onClick="onClick"
                android:text="新增单词"
                android:textColor="@color/common_text_black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_danci_dancitxt"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="?selectableItemBackground"
                android:gravity="center_vertical"
                android:onClick="onClick"
                android:text="单词.txt"
                android:textColor="@color/common_text_black"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/tv_danci_guess"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="?selectableItemBackground"
                android:gravity="center_vertical"
                android:onClick="onClick"
                android:text="猜一猜"
                android:textColor="@color/common_text_black"
                android:textSize="14sp" />

            <Switch
                android:id="@+id/sw_danci_interval"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="?selectableItemBackground"
                android:gravity="center_vertical"
                android:onClick="onClick"
                android:text="轮询"
                android:textColor="@color/common_text_black"
                android:textSize="14sp" />

            <Switch
                android:id="@+id/sw_danci_fullscreen"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="?selectableItemBackground"
                android:gravity="center_vertical"
                android:onClick="onClick"
                android:text="全屏显示"
                android:textColor="@color/common_text_black"
                android:textSize="14sp" />
            <Switch
                android:id="@+id/sw_danci_cavas"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="?selectableItemBackground"
                android:gravity="center_vertical"
                android:onClick="onClick"
                android:text="画图"
                android:textColor="@color/common_text_black"
                android:textSize="14sp" />

            <RadioGroup
                android:id="@+id/rg_danci"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/divider"
                android:orientation="vertical"
                android:showDividers="middle|end|beginning|none">

                <RadioButton
                    android:id="@+id/rb_danci_close"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="?selectableItemBackground"
                    android:text="关闭自动发音" />

                <RadioButton
                    android:id="@+id/rb_danci_english"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="?selectableItemBackground"
                    android:text="英式发音" />

                <RadioButton
                    android:id="@+id/rb_danci_america"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="?selectableItemBackground"
                    android:checked="true"
                    android:text="美式发音" />
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_danci_substract"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:text="-"
                    android:textColor="@color/common_text_black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_danci_intervaltime"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground"
                    android:gravity="center"
                    android:text="10"
                    android:textColor="@color/common_text_black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_danci_addition"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:text="+"
                    android:textColor="@color/common_text_black"
                    android:textSize="16sp" />
            </LinearLayout>

            <RadioGroup
                android:id="@+id/rg_danci_showtype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/divider"
                android:orientation="vertical"
                android:showDividers="middle|end|beginning|none">

                <RadioButton
                    android:id="@+id/rb_danci_both"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="?selectableItemBackground"
                    android:checked="true"
                    android:text="中英文" />

                <RadioButton
                    android:id="@+id/rb_danci_onlyen"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="?selectableItemBackground"
                    android:text="英文" />

                <RadioButton
                    android:id="@+id/rb_danci_onlycn"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="?selectableItemBackground"
                    android:text="中文" />
            </RadioGroup>
        </LinearLayout>
    </ScrollView>

</android.support.v4.widget.DrawerLayout>